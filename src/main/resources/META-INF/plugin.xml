<idea-plugin>
    <id>com.github.nirro01.vointellijplugin</id>
    <name>Vo-DevTools</name>
    <vendor>Viaccess Orca</vendor>
    <resource-bundle>messages.VOIntellijPluginBundle</resource-bundle>
    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Rightv Settings -->
        <applicationConfigurable parentId="VODevTools"
                                 instance="com.github.nirro01.vointellijplugin.settings.rightv.RightvSettingsConfigurable"
                                 id="RIGHTVSettings" displayName="RIGHTV"/>
        <applicationService
                serviceImplementation="com.github.nirro01.vointellijplugin.settings.rightv.RightvSettingsState"/>
        <!-- Compass Settings -->
        <applicationConfigurable parentId="VODevTools"
                                 instance="com.github.nirro01.vointellijplugin.settings.compass.CompassSettingsConfigurable"
                                 id="CompassSettings" displayName="COMPASS"/>
        <applicationService
                serviceImplementation="com.github.nirro01.vointellijplugin.settings.compass.CompassSettingsState"/>
    </extensions>

    <actions>
        <!-- Main group -->
        <group id="Vo" text="Viaccess Orca" popup="true" icon="/images/logo.png">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>

        <!-- Rightv groups-->
        <group id="Vo.Rightv" text="RIGHTV" popup="true">
            <add-to-group group-id="Vo" anchor="first"/>
        </group>
        <group id="Vo.Rightv.Jboss" text="JBoss" popup="true">
            <add-to-group group-id="Vo.Rightv" anchor="last"/>
        </group>
        <group id="Vo.Rightv.Deploy" text="Deploy" popup="true">
            <add-to-group group-id="Vo.Rightv" anchor="last"/>
        </group>
        <!-- Rightv actions-->
        <action
                id="Vo.Admin.Stop"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.StopAdminAction"
                text="Stop Admin"
                description="Stop the admin JBoss process in your All-in-one VM"
                icon="AllIcons.Process.Stop">
            <add-to-group group-id="Vo.Rightv.Jboss" anchor="first"/>
        </action>
        <action
                id="Vo.Admin.Start"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.StartAdminAction"
                text="Start Admin"
                description="Starts the admin JBoss process in your All-in-one VM"
                icon="AllIcons.Toolwindows.ToolWindowRun">
            <add-to-group group-id="Vo.Rightv.Jboss" anchor="first"/>
        </action>
        <action
                id="Vo.Admin.Restart"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.RestartAdminAction"
                text="Restart Admin"
                description="Restart the admin JBoss process in your All-in-one VM"
                icon="AllIcons.Actions.Restart">
            <add-to-group group-id="Vo.Rightv.Jboss" anchor="first"/>
        </action>

        <action
                id="Vo.Rte.Stop"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.StopRTEAction"
                text="Stop RTE"
                description="Stop the rte JBoss process in your All-in-one VM"
                icon="AllIcons.Process.Stop">
            <add-to-group group-id="Vo.Rightv.Jboss" anchor="first"/>
        </action>
        <action
                id="Vo.Rte.Start"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.StartRTEAction"
                text="Start RTE"
                description="Starts the rte JBoss process in your All-in-one VM"
                icon="AllIcons.Toolwindows.ToolWindowRun">
            <add-to-group group-id="Vo.Rightv.Jboss" anchor="first"/>
        </action>
        <action
                id="Vo.Rte.Restart"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.RestartRTEAction"
                text="Restart RTE"
                description="Restart the rte JBoss process in your All-in-one VM"
                icon="AllIcons.Actions.Restart">
            <add-to-group group-id="Vo.Rightv.Jboss" anchor="first"/>
        </action>
        <action
                id="Vo.Admin.Upload"
                class="com.github.nirro01.vointellijplugin.actions.sftp.UploadAdminEarsAction"
                text="Upload Admin EARs"
                description="Upload Admin EARs"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="Vo.Rightv.Deploy" anchor="first"/>
        </action>
        <action
                id="Vo.Rte.Upload"
                class="com.github.nirro01.vointellijplugin.actions.sftp.UploadRTEEarsAction"
                text="Upload RTE EARs"
                description="Upload RTE EARs"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="Vo.Rightv.Deploy" anchor="first"/>
        </action>
        <action
                id="Vo.Modules.Upload"
                class="com.github.nirro01.vointellijplugin.actions.sftp.UploadJBossModulesAction"
                text="Upload JBoss Module Jars"
                description="Upload JBoss module jars"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="Vo.Rightv.Deploy" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
