<idea-plugin>
    <id>com.github.nirro01.vointellijplugin</id>
    <name>Vo-DevTools</name>
    <vendor>Viaccess Orca</vendor>
    <resource-bundle>messages.VOIntellijPluginBundle</resource-bundle>
    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Rightv Settings -->
        <applicationConfigurable parentId="voDevtools"
                                 instance="com.github.nirro01.vointellijplugin.settings.rightv.RightvSettingsConfigurable"
                                 id="RIGHTVSettings" displayName="RIGHTV"/>
        <applicationService
                serviceImplementation="com.github.nirro01.vointellijplugin.settings.rightv.RightvSettingsState"/>
        <!-- Compass Settings -->
        <applicationConfigurable parentId="voDevtools"
                                 instance="com.github.nirro01.vointellijplugin.settings.compass.CompassSettingsConfigurable"
                                 id="CompassSettings" displayName="COMPASS"/>
        <applicationService
                serviceImplementation="com.github.nirro01.vointellijplugin.settings.compass.CompassSettingsState"/>
    </extensions>

    <actions>
        <!-- Main group -->
        <group id="vo" text="Viaccess Orca" popup="true" icon="/images/logo.png">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>

        <!-- Rightv groups-->
        <group id="vo.rightv" text="Rightv" popup="true">
            <add-to-group group-id="vo" anchor="first"/>
        </group>
        <group id="vo.rightv.jboss" text="JBoss" popup="true">
            <add-to-group group-id="vo.rightv" anchor="last"/>
        </group>
        <group id="vo.rightv.deploy" text="Deploy" popup="true">
            <add-to-group group-id="vo.rightv" anchor="last"/>
        </group>
        <group id="vo.rightv.links" text="Links" popup="true">
            <add-to-group group-id="vo.rightv" anchor="last"/>
        </group>
        <!-- Compass groups-->
        <group id="vo.compass" text="Compass" popup="true">
            <add-to-group group-id="vo" anchor="first"/>
        </group>
        <group id="vo.compass.jboss" text="JBoss" popup="true">
            <add-to-group group-id="vo.compass" anchor="last"/>
        </group>
        <group id="vo.compass.deploy" text="Deploy" popup="true">
            <add-to-group group-id="vo.compass" anchor="last"/>
        </group>
        <group id="vo.compass.links" text="Links" popup="true">
            <add-to-group group-id="vo.compass" anchor="last"/>
        </group>
        <!-- Leonardo groups-->
        <group id="vo.leonardo" text="Leonardo" popup="true">
            <add-to-group group-id="vo" anchor="last"/>
        </group>

        <!-- Rightv actions-->
        <action
                id="vo.rightv.jboss.stop-admin"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.StopAdminAction"
                text="Stop Admin"
                description="Stop the admin JBoss process in your All-in-one VM"
                icon="AllIcons.Process.Stop">
            <add-to-group group-id="vo.rightv.jboss" anchor="first"/>
        </action>
        <action
                id="vo.rightv.jboss.start-admin"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.StartAdminAction"
                text="Start Admin"
                description="Starts the admin JBoss process in your All-in-one VM"
                icon="AllIcons.Toolwindows.ToolWindowRun">
            <add-to-group group-id="vo.rightv.jboss" anchor="first"/>
        </action>
        <action
                id="vo.rightv.jboss.stop-rte"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.StopRTEAction"
                text="Stop RTE"
                description="Stop the rte JBoss process in your All-in-one VM"
                icon="AllIcons.Process.Stop">
            <add-to-group group-id="vo.rightv.jboss" anchor="first"/>
        </action>
        <action
                id="vo.rightv.jboss.start-rte"
                class="com.github.nirro01.vointellijplugin.actions.ssh.rightv.StartRTEAction"
                text="Start RTE"
                description="Starts the rte JBoss process in your All-in-one VM"
                icon="AllIcons.Toolwindows.ToolWindowRun">
            <add-to-group group-id="vo.rightv.jboss" anchor="first"/>
        </action>
        <action
                id="vo.rightv.deploy.upload-admin"
                class="com.github.nirro01.vointellijplugin.actions.sftp.rightv.UploadAdminEarsAction"
                text="Upload Admin EARs"
                description="Upload Admin EARs"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="vo.rightv.deploy" anchor="first"/>
        </action>
        <action
                id="vo.rightv.deploy.upload-rte"
                class="com.github.nirro01.vointellijplugin.actions.sftp.rightv.UploadRTEEarsAction"
                text="Upload RTE EARs"
                description="Upload RTE EARs"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="vo.rightv.deploy" anchor="first"/>
        </action>
        <action
                id="vo.rightv.deploy.modules"
                class="com.github.nirro01.vointellijplugin.actions.sftp.rightv.UploadJBossModulesAction"
                text="Upload JBoss Module Jars"
                description="Upload JBoss module jars"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="vo.rightv.deploy" anchor="last"/>
        </action>
        <action
                id="vo.rightv.links.compass-build"
                class="com.github.nirro01.vointellijplugin.actions.browse.rightv.RightvJenkinsBuildAction"
                text="Jenkins Build"
                description="Open rightv build job in jenkins">
            <add-to-group group-id="vo.rightv.links" anchor="last"/>
        </action>
        <!-- Compass actions-->

        <action
                id="vo.compass.jboss.stop-compass"
                class="com.github.nirro01.vointellijplugin.actions.ssh.compass.StopCompassAction"
                text="Stop Compass"
                description="Stop Compass JBoss process in your All-in-one VM"
                icon="AllIcons.Process.Stop">
            <add-to-group group-id="vo.compass.jboss" anchor="first"/>
        </action>
        <action
                id="vo.compass.jboss.start-compass"
                class="com.github.nirro01.vointellijplugin.actions.ssh.compass.StartCompassAction"
                text="Start Compass"
                description="Starts Compass JBoss process in your All-in-one VM"
                icon="AllIcons.Toolwindows.ToolWindowRun">
            <add-to-group group-id="vo.compass.jboss" anchor="first"/>
        </action>

        <action
                id="vo.compass.deploy.compass-war"
                class="com.github.nirro01.vointellijplugin.actions.sftp.compass.UploadCompassWarAction"
                text="Upload Compass War"
                description="Upload compass war"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="vo.compass.deploy" anchor="first"/>
        </action>

        <action
                id="vo.compass.deploy.search-war"
                class="com.github.nirro01.vointellijplugin.actions.sftp.compass.UploadSearchWarAction"
                text="Upload Search War"
                description="Upload Search war"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="vo.compass.deploy" anchor="first"/>
        </action>

        <action
                id="vo.compass.deploy.etl-war"
                class="com.github.nirro01.vointellijplugin.actions.sftp.compass.UploadETLWarAction"
                text="Upload ETL War"
                description="Upload ETL war"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="vo.compass.deploy" anchor="last"/>
        </action>

        <action
                id="vo.compass.links.compass-build"
                class="com.github.nirro01.vointellijplugin.actions.browse.compass.CompassJenkinsBuildAction"
                text="Jenkins Build"
                description="Open compass build job in jenkins">
            <add-to-group group-id="vo.compass.links" anchor="last"/>
        </action>
        <!-- Leonardo Actions -->
        <action
                id="vo.leonardo.create-temporary-namespace"
                class="com.github.nirro01.vointellijplugin.actions.browse.leonardo.DeployTemporaryNamespaceAction"
                text="Deploy Temporary Namespace"
                description="Open create temporary namespace job in jenkins">
            <add-to-group group-id="vo.leonardo" anchor="first"/>
        </action>
        <action
                id="vo.leonardo.delete-temporary-namespace"
                class="com.github.nirro01.vointellijplugin.actions.browse.leonardo.DeleteTemporaryNamespaceAction"
                text="Delete Temporary Namespace"
                description="Open delete temporary namespace job in jenkins">
            <add-to-group group-id="vo.leonardo" anchor="last"/>
        </action>
        <action
                id="vo.leonardo.leonardo-links"
                class="com.github.nirro01.vointellijplugin.actions.browse.leonardo.LeonardoLinksAction"
                text="Leonardo Links"
                description="Find microservice links - git / jenkins / swagger / sonar">
            <add-to-group group-id="vo.leonardo" anchor="first"/>
        </action>

    </actions>
</idea-plugin>
